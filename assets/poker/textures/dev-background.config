#
# The Poker Game Prototype - default background texture - configuration file.
#

#
# asset configuration
#

[asset]
class=2d
type=texture


#
# main texture properties
#

[texture]
name=PokerDevBackground
qualityLevel=highest
renderMode=repeat
hardwareResident=true
loadType=plugin-tga
hasGlProperties=false
isBlended=true
hasColormask=false
hasRgbaChange=false
hasSetRgbaChannel=false


#
# load a texture from a TGA image
#

[texture.plugin.tga]
filename=assets/poker/textures/dev-background.tga


#
# texture blending
#

[texture.blend]
source=SourceAlpha
destination=OneMinusSourceAlpha

